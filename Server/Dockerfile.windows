# Windows container-based Dockerfile
FROM mcr.microsoft.com/dotnet/runtime:9.0-nanoserver-ltsc2022

WORKDIR /app

# Copy application files
COPY bin/Debug/net9.0/ ./

# Copy all Windows DLLs 
COPY ProudNet_libs/*.dll ./

# Open port
EXPOSE 33334

# Run the application
ENTRYPOINT ["dotnet", "TankServer.dll"] 